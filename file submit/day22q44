// Q44: Write a program to find the sum of the series: 1 + 3/4 + 5/6 + 7/8 + â€¦ up to n terms.

#include <stdio.h>

int main() {
    int n, i;
    float sum = 0.0;
    float num, den;

    scanf("%d", &n);

    if (n >= 1) {
        sum = 1.0;
    }

    num = 3.0;
    den = 4.0;

    for (i = 2; i <= n; i++) {
        sum = sum + (num / den);
        num = num + 2.0;
        den = den + 2.0;
    }

    printf("Approximate sum: %.1f\n", sum);

    return 0;
}